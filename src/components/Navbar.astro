---
import Button from "./Button.astro";
import { styles, text, links } from "../utils/constants";
---

<nav class="flex w-full px-5 lg:max-w-screen-lg xl:max-w-screen-xl">
  <div class="flex-1">
    <img src="/images/Logo.svg" class="lg:w-[191px] lg:h-[56px] w-[150px]" />
  </div>
  <div class="lg:block hidden flex-1">
    <ul class="flex items-center justify-around gap-10">
      {
        text.navbar.map((item) => (
          <li class="font-medium text-lg">
            <a href={`#${item.route}`}>{item.text}</a>
          </li>
        ))
      }
      <Button
        style={styles.whatsapp}
        text={text.contact}
        link={links.whatsapp}
      />
    </ul>
  </div>
</nav>
